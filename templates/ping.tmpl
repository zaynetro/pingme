<!doctype>
<html>
<head>
	<meta charset="utf-8" />
	<title>Ping me</title>
</head>
<body>
	<h1>PingME</h1>
	<h2>Your message:</h2>
	<input type="text" id="msg" />
	<input type="button" id="sendBtn" value="Send" />
	<div id="log"></div>
	<script>
	var url = 'ws://localhost:3000/ws';
    var c = new WebSocket(url);

    var btn = document.querySelector('#sendBtn');
    var msg = document.querySelector('#msg');
    var log = document.querySelector('#log');

    btn.addEventListener('click', function () {
    	var text = msg.value;
    	c.send(text);

    	msg.value = '';
    });

    c.onmessage = function (data) {
    	log.innerHTML += data.data + '<br />';
    	console.log(data);
    };

    c.onopen = function () {
    	log.innerHTML += 'Connection opened<br/>';
    	console.log('Connection opened');
    };

    c.onclose = function () {
    	log.innerHTML += 'Connection closed<br />';
    	console.log('Connection closed');
    };
	</script>
</body>
</html>
